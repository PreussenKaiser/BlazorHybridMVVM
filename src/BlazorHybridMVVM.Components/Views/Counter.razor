@page "/counter"

@inject CounterViewModel ViewModel

<h1>
    @this.ViewModel.Title
</h1>

<Binder BindingContext="this.ViewModel">
    <p role="status">
        Current count: @this.ViewModel.Count
    </p>
</Binder>

<button class="btn btn-primary" @onclick="this.ViewModel.IncrementCommand.Execute">
    Click me
</button>
