<div class="alert alert-secondary mt-4">
    <span class="oi oi-pencil me-2" aria-hidden="true"></span>
    <strong>@this.Title</strong>

    <span class="text-nowrap">
        Please take our
        <a target="_blank" class="font-weight-bold link-dark" href="https://go.microsoft.com/fwlink/?linkid=2188693">
            brief survey
        </a>
    </span>
    and tell us what you think.
</div>

@code
{
    /// <summary>
    /// Gets or sets the survey's title.
    /// </summary>
    [Parameter]
    public string Title { get; set; }
}
